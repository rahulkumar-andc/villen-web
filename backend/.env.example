# Django Core Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,example.com,www.example.com

# Database Configuration (Optional - defaults to SQLite)
# Uncomment for PostgreSQL
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=villen_db
# DATABASE_USER=postgres
# DATABASE_PASSWORD=your_password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://example.com,https://www.example.com,https://app.example.com

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@example.com

# Sentry Configuration (Optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Application Settings
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15

# OTP Configuration
OTP_VALIDITY_MINUTES=10
OTP_MAX_ATTEMPTS=3

# JWT Token Settings (in minutes)
JWT_ACCESS_TOKEN_LIFETIME=30
JWT_REFRESH_TOKEN_LIFETIME=7

# API Rate Limiting
API_ANON_RATE_LIMIT=100/hour
API_USER_RATE_LIMIT=1000/hour

# Logging
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=WARNING
