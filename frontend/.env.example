# ============================================================================
# Frontend Environment Variables
# Copy this file to .env.local and fill in your values
# ============================================================================

# ============================================================================
# API Configuration
# ============================================================================
# Backend API endpoint (development)
VITE_API_URL=http://127.0.0.1:8000/api

# Backend API endpoint (production)
# VITE_API_URL=https://api.villen.me/api

# ============================================================================
# Application Settings
# ============================================================================
VITE_APP_NAME=VILLEN Web
VITE_APP_DESCRIPTION=Shadow Layer Security Platform

# ============================================================================
# Feature Flags
# ============================================================================
# Enable error tracking with Sentry
VITE_ENABLE_ANALYTICS=false

# Enable Sentry error reporting
VITE_ENABLE_ERROR_REPORTING=false

# Enable service worker for offline support
VITE_ENABLE_SERVICE_WORKER=true

# ============================================================================
# Build Configuration
# ============================================================================
# Node environment (development or production)
NODE_ENV=development

# Generate source maps for debugging
VITE_SOURCEMAP=true

# Enable strict mode for additional React warnings
VITE_STRICT_MODE=true

# ============================================================================
# Security Settings
# ============================================================================
# Access token lifetime in minutes
VITE_TOKEN_EXPIRY=30

# API response cache duration in seconds
VITE_CACHE_DURATION=300

# ============================================================================
# Optional: Error Tracking (Sentry)
# ============================================================================
# SENTRY_DSN=https://your-sentry-key@sentry.io/project-id
# SENTRY_ENVIRONMENT=development
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SENTRY=false

# Sentry Configuration (Optional)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Application Settings
VITE_MAX_FILE_SIZE=10485760
VITE_SESSION_TIMEOUT=1800

# Build Environment
NODE_ENV=development
